"""
Pola Rumit
"""

p = int(input())
x = int(input())
y = int(input())


for i in range(1, x+3):
    if i == 1:
        print("+", end="")
    elif i != x+2:
        print("-", end="")
    else:
        print("", end="+")
for i in range(1, x+2):
    if i != x+1:
        print("-", end="")
    else:
        print("", end="+")
for i in range(1, x+2):
    if i != x+1:
        print("-", end="")
    else:
        print("", end="+")
